@page "/"
@using SteelCMS.Client.Shared
@using Microsoft.AspNetCore.Components.Web
@inject HttpClient Http
<PageTitle>หน้าแรก</PageTitle>

<div>
<!-- Hero Carousel -->
    <div class="carousel">
        <div class="carousel-inner position-relative">
            <img src="hero.jpg" class="w-100" alt="Construction workers reviewing documents" />
            <div class="carousel-indicators position-absolute bottom-0 start-50 translate-middle-x mb-4">
                <button class="mx-1 active"></button>
                <button class="mx-1"></button>
                <button class="mx-1"></button>
                <button class="mx-1"></button>
            </div>
        </div>
    </div>

    <!-- How to Order Section -->
    <section class="py-5">
        <div class="container text-center">
            <h2 class="mb-4">วิธีการสั่งซื้อ</h2>
            <div class="video-placeholder bg-light rounded" style="height: 400px;">
                <i class="bi bi-play-circle fs-1 text-secondary position-absolute top-50 start-50 translate-middle"></i>
            </div>
        </div>
    </section>

    <!-- Products Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="mb-4">สินค้าของเรา</h2>
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="product-card position-relative">
                        <img src="steel-bars.jpg" class="w-100 rounded" alt="Steel bars" />
                        <h3 class="position-absolute bottom-0 start-0 text-white p-3 m-0">เหล็กเส้น</h3>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="product-card position-relative">
                        <img src="steel-plate.jpg" class="w-100 rounded" alt="Steel plate" />
                        <h3 class="position-absolute bottom-0 start-0 text-white p-3 m-0">เหล็กแผ่น</h3>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="product-card position-relative">
                        <img src="steel-pipe.jpg" class="w-100 rounded" alt="Steel pipe" />
                        <h3 class="position-absolute bottom-0 start-0 text-white p-3 m-0">เหล็กรูปพรรณ</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Product Examples -->
    <section class="py-5">
        <div class="container">
            <h2 class="mb-4">ตัวอย่างสินค้า</h2>
            <div class="position-relative">
                <div class="row g-4">
                    <div class="col-md-4">
                        <img src="example1.jpg" class="w-100 rounded" alt="Product example 1" />
                    </div>
                    <div class="col-md-4">
                        <img src="example2.jpg" class="w-100 rounded" alt="Product example 2" />
                    </div>
                    <div class="col-md-4">
                        <img src="example3.jpg" class="w-100 rounded" alt="Product example 3" />
                    </div>
                </div>
                <button class="carousel-control-prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>
    </section>

    
</div>

