@code {
    private bool isSidebarCollapsed = false;
    private string currentPage = "profile";
    private string currentPageTitle = "ข้อมูลส่วนตัว";

    private List<MenuItem> menuItems = new List<MenuItem>
    {
        new MenuItem { Id = "profile", Label = "โปรไฟล์", IconClass = "📋" },
        new MenuItem { Id = "appointments", Label = "การนัดหมาย", IconClass = "📅" },
        new MenuItem { Id = "documents", Label = "เอกสาร", IconClass = "📁" }
    };

    private void ToggleSidebar()
    {
        isSidebarCollapsed = !isSidebarCollapsed;
    }

    private void NavigateTo(string pageId)
    {
        currentPage = pageId;

        // Update the page title based on the selected page
        switch (pageId)
        {
            case "profile":
                currentPageTitle = "ข้อมูลส่วนตัว";
                break;
            case "appointments":
                currentPageTitle = "การนัดหมาย";
                break;
            case "documents":
                currentPageTitle = "เอกสาร";
                break;
        }
    }

    public class MenuItem
    {
        public string Id { get; set; }
        public string Label { get; set; }
        public string IconClass { get; set; }
    }
}

