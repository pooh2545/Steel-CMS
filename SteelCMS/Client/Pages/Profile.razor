        align-items: center;
        cursor: pointer;
        transition: var(--transition);
    }

        .menu-item i {
            margin-right: 10px;
            width: 20px;
            color: #777;
        }

        .menu-item:hover {
            background-color: #f5f7ff;
        }

        .menu-item.active {
            background-color: #eef0ff;
            border-left: 3px solid var(--primary-color);
        }

            .menu-item.active i,
            .menu-item.active span {
                color: var(--primary-color);
            }

    /* Main Content Styles */
    .content {
        flex: 1;
        padding: 30px;
    }

    .profile-card {
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 30px;
    }

    .card-title {
        margin-top: 0;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border-color);
        font-weight: 500;
        font-size: 20px;
    }

    .profile-form {
        display: flex;
        flex-wrap: wrap;
    }

    .profile-image-section {
