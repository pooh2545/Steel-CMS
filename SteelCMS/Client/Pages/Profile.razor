@page "/profile"
@using System.Collections.Generic

<div class="app-container">
    <div class="sidebar @(isSidebarCollapsed ? "collapsed" : "")">
        <div class="sidebar-header">
            <div class="profile-container">
                <img src="/api/placeholder/100/100" alt="User profile" class="profile-image" />
                <div class="profile-info @(isSidebarCollapsed ? "hidden" : "")">
                    <h3>Amanda Smith</h3>
                </div>
            </div>
            <button @onclick="ToggleSidebar" class="toggle-button">
                @(isSidebarCollapsed ? ">" : "<")
            </button>
        </div>
        <div class="sidebar-menu">
            @foreach (var item in menuItems)
            {
                <div class="menu-item @(currentPage == item.Id ? "active" : "")" @onclick="() => NavigateTo(item.Id)">
                    <i class="@item.IconClass"></i>
                    <span class="@(isSidebarCollapsed ? "hidden" : "")">@item.Label</span>
                </div>
            }
        </div>
    </div>

    <div class="main-content">
        <div class="content-header">
            <h2>@currentPageTitle</h2>
            <button class="primary-button">บันทึก</button>
        </div>

        <div class="content-body">
            @if (currentPage == "profile")
            {
                <div class="profile-form">
                    <div class="form-section">
                        <div class="profile-picture-section">
                            <img src="/api/placeholder/150/150" alt="Profile picture" class="large-profile-image" />
                        </div>

                        <div class="form-fields">
                            <div class="form-group">
                                <label>ชื่อ-นามสกุล</label>
                                <input type="text" value="Amanda Smith" />
                            </div>

                            <div class="form-group">
                                <label>อีเมล</label>
                                <input type="email" value="amanda.s@gmail.com" />
                            </div>

                            <div class="form-group">
                                <label>เบอร์โทรศัพท์</label>
                                <input type="tel" value="088xxxxxxx" />
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (currentPage == "appointments")
            {
                <div class="appointments-container">
                    <h3>การนัดหมายของคุณ</h3>
                    <div class="appointments-list">
                        <div class="appointment-card">
                            <div class="appointment-date">15 มีนาคม 2025</div>
                            <div class="appointment-time">14:30 น.</div>
                            <div class="appointment-description">ตรวจสุขภาพประจำปี</div>
                        </div>
                        <div class="appointment-card">
                            <div class="appointment-date">22 มีนาคม 2025</div>
                            <div class="appointment-time">10:00 น.</div>
                            <div class="appointment-description">ปรึกษาแพทย์เฉพาะทาง</div>
                        </div>
                    </div>
                </div>
            }
            else if (currentPage == "documents")
            {
                <div class="documents-container">
                    <h3>เอกสารของคุณ</h3>
                    <div class="documents-list">
                        <div class="document-card">
                            <i class="document-icon">📄</i>
                            <div class="document-name">ผลการตรวจประจำปี 2024</div>
                            <div class="document-date">24 ตุลาคม 2024</div>
                        </div>
                        <div class="document-card">
                            <i class="document-icon">📄</i>
                            <div class="document-name">ใบรับรองแพทย์</div>
                            <div class="document-date">15 กันยายน 2024</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

