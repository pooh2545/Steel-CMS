@page "/profile"
@inject IJSRuntime JSRuntime

<div class="profile-container">
    <!-- Sidebar Menu -->
    <div class="sidebar">
        <div class="profile-pic-small">
            <img src="/images/profile-pic.jpg" alt="Amanda Smith" />
            <h3>Amanda Smith</h3>
        </div>
        <ul class="menu-items">
            <li class="menu-item active">
                <i class="fas fa-user"></i>
                <span>ข้อมูลส่วนตัว</span>
            </li>
            <li class="menu-item">
                <i class="fas fa-file-alt"></i>
                <span>ประวัติส่วนตัว</span>
            </li>
            <li class="menu-item">
                <i class="fas fa-sign-out-alt"></i>
                <span>ออกจากระบบ</span>
            </li>
        </ul>
    </div>

    <!-- Main Content Area -->
    <div class="content">
        <div class="profile-card">
            <h2 class="card-title">ข้อมูลส่วนตัว</h2>

            <div class="profile-form">
                <div class="profile-image-section">
                    <div class="profile-image">
                        <img src="/images/profile-pic.jpg" alt="Profile picture" />
                    </div>
                </div>

                <div class="profile-details">
                    <div class="form-group">
                        <label for="fullname">ชื่อ-นามสกุล</label>
                        <input type="text" id="fullname" class="form-control" value="Amanda Smith" />
                    </div>

                    <div class="form-group">
                        <label for="email">อีเมล</label>
                        <input type="email" id="email" class="form-control" value="amanda@gmail.com" />
                    </div>

                    <div class="form-group">
                        <label for="phone">เบอร์โทรศัพท์</label>
                        <input type="tel" id="phone" class="form-control" value="0902xxxxxxx" />
                    </div>

                    <div class="form-actions">
                        <button class="btn-save" @onclick="SaveProfile">บันทึก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private async Task SaveProfile()
    {
        // Show save confirmation (simulating save)
        await JSRuntime.InvokeVoidAsync("alert", "ข้อมูลถูกบันทึกเรียบร้อยแล้ว");
    }
}

<style>
    :root {
        --primary-color: #5E72E4;
        --text-color: #333;
        --light-gray: #f5f5f5;
        --border-color: #e0e0e0;
        --border-radius: 8px;
        --shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
        --transition: all 0.3s ease;
    }

    body {
        font-family: 'Prompt', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fe;
        color: var(--text-color);
    }

    .profile-container {
        display: flex;
        min-height: 100vh;
    }

    /* Sidebar Styles */
    .sidebar {
        width: 250px;
        background-color: white;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
        padding: 20px 0;
        display: flex;
        flex-direction: column;
    }

    .profile-pic-small {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid var(--border-color);
    }

