<LoginModal @ref="loginModal" />


@code {
    private LoginModal? loginModal;
    private bool isRendered = false;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            isRendered = true;
            StateHasChanged();
        }
    }

    private async Task ShowLoginModal()
    {
        Console.WriteLine(loginModal +" "+isRendered);
        if (isRendered && loginModal != null)
        {
            loginModal.Show();
        }
        else
        {
            Console.WriteLine("LoginModal is not ready yet!");
        }
    }
}


 
