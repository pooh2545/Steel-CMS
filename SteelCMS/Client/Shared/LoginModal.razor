@using SteelCMS.Client.Shared
@using Microsoft.AspNetCore.Components.Web
@page "/Login"

<div class="modal @(IsVisible ? "show" : "")" @onclick="Hide">
    <div class="modal-content" @onclick:stopPropagation>
        <div class="modal-header">
            <h3>เข้าสู่ระบบ</h3>
            <button class="close-button" @onclick="Hide">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <input type="text" placeholder="อีเมล" @bind="Email" />
            </div>
            <div class="form-group">
                <input type="password" placeholder="รหัสผ่าน" @bind="Password" />
            </div>
            <div class="form-links">
                <a href="#">ลืมรหัสผ่าน?</a>
                <a href="#">ลงทะเบียน</a>
            </div>
            <button class="login-submit" @onclick="HandleLogin">เข้าสู่ระบบ</button>
        </div>
    </div>
</div>

@code {
    private bool IsVisible;
    private string? Email { get; set; }
    private string? Password { get; set; }

    public void Show()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsVisible = false;
        StateHasChanged();
    }


    private async Task HandleLogin()
    {
        // Add login logic here
        Hide();
    }
}

<style>
    .modal {
        display: none; /* ซ่อน modal เริ่มต้น */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
    }

        .modal.show {
            display: flex; /* แสดง modal เมื่อมีคลาส show */
            justify-content: center;
            align-items: center;
        }


    .modal-content {
        background-color: white;
        padding: 2rem;
        border-radius: 8px;
        width: 100%;
        max-width: 400px;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .close-button {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
    }

    .form-group {
        margin-bottom: 1rem;
    }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

    .form-links {
        display: flex;
        justify-content: space-between;
        margin: 1rem 0;
    }

        .form-links a {
            color: #4361ee;
            text-decoration: none;
        }

    .login-submit {
        width: 100%;
        background-color: #4361ee;
        color: white;
        border: none;
        padding: 0.75rem;
        border-radius: 4px;
        cursor: pointer;
    }
</style>